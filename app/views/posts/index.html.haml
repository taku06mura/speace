%main.main
  = render 'shared/sidebar'

  .contents
    %ul.container
      - @posts.each do |post|
        %li
          .content__info
            .content__info__name
              = post.user.name
            .content__info__date
              = post.created_at.strftime("%Y/%m/%d %H:%M")
          = link_to "posts/#{post.id}",class: "content__main" do
            .content__main__title
              = post.title
            .content__main__text
              = simple_format(post.text)
            = image_tag post.image.url,class: "content__main__image" if post.image.present?
    = paginate @posts
