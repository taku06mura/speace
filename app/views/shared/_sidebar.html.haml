.sidebar
  %nav.mypage
    = link_to root_path, class:"title" do
      Speace
    %li.mypage__list
      = link_to root_path,class:"mypage__list__contents" do
        .mypage__list__contents__text
          ホーム
        .mypage__list__contents__icon
          = icon('fas', 'home')
    %li.mypage__list
      = link_to edit_user_path(current_user),class:"mypage__list__contents" do
        .mypage__list__contents__text
          アカウント
        .mypage__list__contents__icon
          = icon('fas', 'cog')
    %li.mypage__list
      - if current_user.profile.blank?
        = link_to new_profile_path(current_user),class:"mypage__list__contents" do
          .mypage__list__contents__text
            プロフィール
          .mypage__list__contents__icon
            = icon('fas', 'user')
      - else
        = link_to profile_path(current_user),class: "mypage__list__contents" do
          .mypage__list__contents__text
            プロフィール
          .mypage__list__contents__icon
            = icon('fas', 'user')
    %li.mypage__list
      = link_to "#",class:"mypage__list__contents" do
        .mypage__list__contents__text
          お気に入り
        .mypage__list__contents__icon
          = icon('far', 'star')
    %li.mypage__list
      = link_to messages_path(:team_id),class:"mypage__list__contents" do
        .mypage__list__contents__text
          メッセージ
        .mypage__list__contents__icon
          = icon('far', 'envelope')
    %li.mypage__list
      = link_to teams_path(current_user), class:"mypage__list__contents" do
        .mypage__list__contents__text
          チーム
        .mypage__list__contents__icon
          = icon('fas', 'users')
    %li.mypage__list
      = link_to new_post_path, class:"mypage__list__contents" do
        .mypage__list__contents__text
          募集する
        .mypage__list__contents__icon
          = icon('fas', 'comment-dots')
    %li.mypage__list
      = link_to "#",class:"mypage__list__contents" do
        .mypage__list__contents__text
          検索する
